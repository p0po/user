#parse("common/head.vm")

            <div class="" id="loginModal">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3>已有账号？</h3>
                </div>
                <div class="modal-body">
                    <div class="well">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#login" data-toggle="tab">登陆</a></li>
                            <li><a href="#create" data-toggle="tab">注册账号</a></li>
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane active in" id="login">
                                <form class="form-horizontal" action='/user/login' method="POST">
                                    <fieldset>
                                        <div id="legend">
                                            <legend class="">Login</legend>
                                        </div>
                                        <div class="control-group">
                                            <!-- Username -->
                                            <label class="control-label"  for="username">Username</label>
                                            <div class="controls">
                                                <input type="text" id="account" name="nick_name" placeholder="" class="input-xlarge">
                                            </div>
                                        </div>

                                        <div class="control-group">
                                            <!-- Password-->
                                            <label class="control-label" for="password">Password</label>
                                            <div class="controls">
                                                <input type="password" id="password" name="pass" placeholder="" class="input-xlarge">
                                            </div>
                                        </div>


                                        <div class="control-group">
                                            <!-- Button -->
                                            <div class="controls">
                                                <button class="btn btn-success">登陆</button>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                            <div class="tab-pane fade" id="create">
                                <form id="tab" action="/user/reg" method="POST">
                                    <label>昵称*</label>
                                    <input type="text" name="nick_name" value="" class="input-xlarge">
                                    <label>密码*</label>
                                    <input type="text" name="password" value="" class="input-xlarge">
                                    <label>生日*</label>
                                    <input type="text" name="birth" value="" class="input-xlarge">
                                    <label>Email</label>
                                    <input type="text" name="email" value="" class="input-xlarge">
                                    <label>手机号</label>
                                    <input type="text" name="phone" value="" class="input-xlarge">
                                    <label>性别</label>
                                    <input type="text" name="gender" value="" class="input-xlarge">

                                    <textarea value="Smith" rows="3" class="input-xlarge">
                                    </textarea>

                                    <div>
                                        <button class="btn btn-primary">注册账号</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

